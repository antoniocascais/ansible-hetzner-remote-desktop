# Copy this file to .env and customise values for your environment.
# Secrets placed in .env are ignored by git.

# SSH target for the Hetzner VPS
ANSIBLE_REMOTE_HOST=203.0.113.10
ANSIBLE_REMOTE_HOSTNAME=remote-desktop-v1
ANSIBLE_REMOTE_USER=root
ANSIBLE_REMOTE_SSH_KEY=/home/you/.ssh/hetzner_remote_desktop
ANSIBLE_REMOTE_SSH_PORT=22
ANSIBLE_REMOTE_PYTHON=/usr/bin/python3

# Hetzner Cloud server name (used when attaching the firewall)
ANSIBLE_HCLOUD_SERVER_NAME=remote-desktop-v1
# Optional explicit Hetzner Cloud server ID (overrides name/IP lookup)
# ANSIBLE_HCLOUD_SERVER_ID=12345678

# Convenience alias used for firewall + XRDP configuration (defaults to the same port)
ANSIBLE_SSH_PORT=22

# Operator account that replaces root SSH access
ANSIBLE_OPERATOR_USERNAME=operator
# Supply either a public key string (newline separated) or point to a file; scripts will read the file when present.
ANSIBLE_OPERATOR_PUBLIC_KEYS_FILE=/home/you/.ssh/hetzner_remote_desktop.pub
# ANSIBLE_OPERATOR_PUBLIC_KEYS="ssh-ed25519 AAA... user@example.com"

# Operator sudo password (required for re-provisioning after initial bootstrap)
# Leave empty for first provision (connects as root), set for subsequent runs
ANSIBLE_BECOME_PASSWORD=

# Firewall + service tuning
# REQUIRED: Specify allowed source IP ranges (provisioning will fail if not set or if 0.0.0.0/0 is used)
ANSIBLE_FIREWALL_ALLOWED_CIDRS=203.0.113.0/24,198.51.100.10/32
ANSIBLE_FIREWALL_NAME=rdp-default
ANSIBLE_FIREWALL_DESCRIPTION=Remote desktop access firewall managed by automation
ANSIBLE_SYSTEM_TIMEZONE=UTC
ANSIBLE_SYSTEM_LOCALE=en_US.UTF-8
ANSIBLE_SYSTEM_AUTO_REBOOT=true
ANSIBLE_RDP_COLOR_DEPTH=16
ANSIBLE_RDP_DISABLE_COMPOSITOR=true

# Hetzner Cloud credentials (required for firewall tasks)
HCLOUD_TOKEN=replace-with-hetzner-api-token
# Optional path to a file containing the token if you prefer not to export it directly
# HCLOUD_TOKEN_FILE=/path/to/token/file
